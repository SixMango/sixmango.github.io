.post-list
  padding: 0

  .post-item
    margin-bottom: 1rem
    margin-left: 0
    list-style-type: none
    font-size: 15px
    .meta
      display: block
      margin-right: 16px
      min-width: 100px
      color: $color-meta

    a
      font-weight: bold

@media (min-width: 480px)
  .post-list
    .post-item
      display: flex
      margin-bottom: 5px

      .meta
        text-align: left

.project-list
  padding: 0
  list-style: none

  .project-item
    margin-bottom: 5px
    font-size: 15px
    p
      display: inline
    
    a
      font-weight: bold

#about 
  a
    color: $color-text
